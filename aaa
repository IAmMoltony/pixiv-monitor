
def check_new_artists(seen, config, api):
    new_artist_ids = []
    for artist_id in config["artist_ids"]:
        print(f"check user #{artist_id}")
        is_new = True
        for illust_id in seen.seen_illusts:
            illust_json = api.illust_detail(illust_id)["illust"]
            illust = PixivIllustration.from_json(illust_json)
            if illust.user.iden == artist_id:
                is_new = False
                print("not new")
                break
        if is_new:
            new_artist_ids.append(artist_id)
    if new_artist_ids:
        print("we got new artists")
        for artist_id in new_artist_ids:
            user_illusts_json = get_json_illusts(api, artist_id)
            illusts = user_illusts_json["illusts"]
            for illust_json in illusts:
                illust = PixivIllustration.from_json(illust_json)
                print(f"process pixiv #{illust.iden}")
                seen.add_illust(illust.iden)
